{% extends 'base.html.twig' %}

{% block title %}Hello ComplementController!{% endblock %}

{% block body %}
   
   <div class="container-fluid mt-5">
		<div class="card shadow">
			<div class="card-body">
				<h4 class="text-center">Ajout Complement</h4>
				{{form_start(form)}}
				<div class="mb-3">
					<label for="" class="">Nom Complement</label>
					{{form_widget(form.nom)}}
					<div class="invalid-feedback">
						
					</div>
					<small id="helpId" class="text-danger">
						{{form_errors(form.nom)}}
					</small>
				</div>
				<div class="mb-3">
					<label for="" class="">Prix</label>
					{{form_widget(form.prix)}}
					<div class="invalid-feedback">
						
					</div>
					<small id="helpId" class="text-danger">
						{{form_errors(form.prix)}}
					</small>
				</div>
			
				<div class="mb-3">
					<label for="formFile" class="">Image</label>
					{{form_widget(form.image.nom)}}
					<div class="invalid-feedback">
						
					</div>
					<small id="helpId" class="text-danger">
						{{form_errors(form.image.nom)}}
					</small>
				</div>
				<button type="submit" class="btn btn-primary " style="float:right">Enregistrer</button>
				{{form_end(form)}}
			</div>
		</div>

	</div>

{% endblock %}
{% block javascripts %}
    {{parent()}}
	<script src="{{asset('js/complement.js')}}"></script>
{% endblock %}
