{% extends 'base.html.twig' %}

{% block title %}Hello ComplementController!
{% endblock %}

{% block body %}
	<style>
		body {
			background : #f9f7ec;
		}
	</style>

	<div class="body">
		<div class="container c1">
			{{ form_start(form) }}
			<div data-aos="fade-up" data-aos-duration="3000"
				id="form" class="form">
				 {% if chambreMode is defined %}
				                         <h2>Modifier Chambre</h2>
				                    {% else %}
				                        <h2>Ajout complement</h2>
				                    {% endif %}
				               
				<div class="form-control" >
					<label for="Nom_complement">Nom complement</label>
					{{ form_widget(form.nom) }}
					<small></small>
					<div class="invalid-feedback">{{ form_errors(form.nom) }}</div>
				</div>
				<div class="form-control" >
					<label for="Prix">Prix complement</label>
					{{ form_widget(form.prix) }}
					<small></small>
					<div class="invalid-feedback">
						{{ form_errors(form.prix) }}</div>
				</div>

				<div class="form-control" >
					<label for="description">Image complement</label>
					{{ form_widget(form.image.nom) }}
					<small>
						{{ form_errors(form.image.nom) }}</small>
					<div class="invalid-feedback"></div>
				</div>
				{{ form_widget(form.Valider) }}
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{parent()}}
	<script src="{{asset('js/complement.js')}}"></script>
{% endblock %}
