{% extends 'base.html.twig' %}

{% block title %}Hello BurgerController!
{% endblock %}

{% block body %}
<style>
		body {
			background-image: url("https://st2.depositphotos.com/3300441/11588/i/950/depositphotos_115884046-stock-photo-burgers-set-background.jpg");
			background-size: cover;
			background-repeat: no repeat;
		}
	
</style>

 <div class="body">
        <div class="container c1">
            {{ form_start(form) }}
               <div id="form" class="form">
                    {% if chambreMode is defined %}
                         <h2>Modifier Chambre</h2>
                    {% else %}
                        <h2>Ajout Burger</h2>
                    {% endif %}
               
                        <div class="form-control">
                            <label for="Nom_burger">Nom Burger</label>
                            {{ form_widget(form.nom) }}
                            <small> {{ form_errors(form.nom) }}</small>
							 <div class="invalid-feedback"></div>
                        </div>
                        <div class="form-control">
                            <label for="Prix">Prix Burger</label>
                            {{ form_widget(form.prix) }}
                            <small> {{ form_errors(form.prix) }}</small>
							 <div class="invalid-feedback"></div>
                        </div>
                        <div class="form-control">
                            <label for="description">Description Burger</label>
                            {{ form_widget(form.description) }}
							 <small> </small>
							  <div class="invalid-feedback"></div>
                        </div>
						<div class="form-control">
                            <label for="description">Image Burger</label>
                            {{ form_widget(form.image.nom) }}
							 <small> </small>
							  <div class="invalid-feedback">{{ form_errors(form.image.nom) }}</div>
                        </div>
                       {{ form_widget(form.Valider) }}
               </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
 {{parent()}}
	<script src="{{asset('js/burger.js')}}"></script>
{% endblock %}
