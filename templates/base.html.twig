		{% block menu %}

			<!-- header section starts  -->

			<header class="header">

				<a
					href="#" class="logo">
					{# <i class="fas fa-utensils"></i> #}
					<i class="fa-solid fa-burger"></i>
				</a>

				<nav class="navbar">
					{% if is_granted("ROLE_CLIENT") %}
						<a href="{{path('catalogue')}}">Accueil</a>
						<a class="" href="{{path('list_commande')}}">Mes Commandes</a>
					{% endif %}
					{% if is_granted("ROLE_GESTIONNAIRE") %}
						<a class="a" href="{{path('list_burger')}}">Burger</a>
						<a class="a" href="{{path('list_menu')}}">Menu</a>
						<a class="a" href="{{path('list_complement')}}">Complement</a>
						<a class="a" href="{{path('list_commande')}}">Commandes</a>
					{% endif %}
				</nav>

				<div class="icons">
					<div id="menu-btn" class="fas fa-bars"></div>
					{% if is_granted('IS_AUTHENTICATED_FULLY') %}
						<a href="{{path('logout')}}">
						
							<div id="cart-btn" class="fa-solid fa-arrow-right-from-bracket"></div>
						</a>
					{% else %}
						<a href="{{path('login')}}">
							
