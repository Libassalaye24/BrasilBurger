        <div href="" class="box">
            <img src="{{asset('img/uploads/' ~ CCompl.image.nom)}}" alt="">
            <div class="content">
                <h3>{# {{Cburger.quantity}} #}x {{CCompl.nom}}</h3>
                <div class="price">{{CCompl.prix}} FCFA</div>
            </div>
        </div>
    </div>
    {% endfor %}
    {% for Cmenu in details.menu %}
     <div class="box-container">

        <div  class="box">
            <img src="{{asset('img/uploads/' ~ Cmenu.image.nom)}}" alt="">
            <div class="content">
                <h3> {# {{Cmenu.quantity}} #}x {{Cmenu.nom}}</h3>
                <div class="price">
                    {% set montant = 0 %}
					{% set montantTotal = 0 %}
                    {% for item in Cmenu.complements %}
                        {% set montant = montant + item.prix %}                   
                    {% endfor %}
                    {{(montant + Cmenu.burger.prix)}} FCFA
					{% set montotal = montant + Cmenu.burger.prix  %}
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
